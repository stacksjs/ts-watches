{
  "name": "ts-watches",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "version": "0.1.0",
  "description": "A comprehensive TypeScript library for downloading, parsing, and analyzing data from smartwatches and fitness devices.",
  "author": "Chris Breuer <chris@stacksjs.org>",
  "license": "MIT",
  "homepage": "https://github.com/stacksjs/ts-watches#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stacksjs/ts-watches.git"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/ts-watches/issues"
  },
  "keywords": [
    "garmin",
    "polar",
    "suunto",
    "coros",
    "wahoo",
    "apple-watch",
    "smartwatch",
    "fitness",
    "fit-file",
    "gpx",
    "tcx",
    "training",
    "running",
    "cycling",
    "typescript"
  ],
  "scripts": {
    "fresh": "bunx rimraf node_modules/ bun.lock && bun i",
    "test": "bun test",
    "lint": "bunx --bun pickier lint .",
    "lint:fix": "bunx --bun pickier lint . --fix",
    "changelog": "bunx logsmith --verbose",
    "changelog:generate": "bunx logsmith --output CHANGELOG.md",
    "release": "bun run changelog:generate && bunx bumpx prompt --recursive",
    "dev:docs": "bunx bunpress dev",
    "build:docs": "bunx bunpress build",
    "preview:docs": "bunx bunpress preview",
    "build": "bun --filter '*' run build",
    "typecheck": "bun --bun tsc --noEmit"
  },
  "devDependencies": {
    "@stacksjs/bunpress": "^0.1.1",
    "@types/bun": "^1.3.9",
    "better-dx": "^0.2.3",
    "pickier": "^0.1.20"
  }
}
